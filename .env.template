# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env for local development
# For production, set these in your deployment environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type (h2 for dev, postgresql for prod)
DB_TYPE=postgresql

# PostgreSQL Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/todoapp
DATABASE_USERNAME=todouser
DATABASE_PASSWORD=your_secure_password_here
DATABASE_DRIVER=org.postgresql.Driver
DATABASE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000

# Database Schema Management
DDL_AUTO=update
SQL_INIT_MODE=never
SHOW_SQL=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_ENABLED=true
JWT_SECRET=YourSuperSecureJWTSecretKeyThatShouldBeAtLeast256BitsLongForHS256AlgorithmSecurity
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Password Security - CHANGE THIS IN PRODUCTION!
SECURITY_PASSWORD_PEPPER=YourSuperSecurePasswordPepperForAdditionalSecurity

# Legacy Secret Key - CHANGE THIS IN PRODUCTION!
SECRET_KEY=YourSecureSecretKey

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Configuration
PORT=8080
CONTEXT_PATH=

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging Levels
LOG_LEVEL=INFO
METHOD_EXECUTION_LOG_LEVEL=INFO
SPRING_SECURITY_LOG_LEVEL=WARN
SPRING_WEB_LOG_LEVEL=WARN
HIBERNATE_SQL_LOG_LEVEL=WARN
HIBERNATE_BINDER_LOG_LEVEL=WARN

# Log File Path
LOG_FILE_PATH=./logs/application.log

# Actuator Configuration
ACTUATOR_ENDPOINTS=health,info
HEALTH_DETAILS=when-authorized

# =============================================================================
# RENDER.COM SPECIFIC (For deployment)
# =============================================================================

# Render automatically provides DATABASE_URL for PostgreSQL
# You only need to set these additional variables in Render:

# JWT_SECRET=YourProductionJWTSecret
# SECURITY_PASSWORD_PEPPER=YourProductionPepper
# SECRET_KEY=YourProductionSecretKey
# SPRING_PROFILES_ACTIVE=prod

{
  "info": {
    "name": "Enhanced Todo Application",
    "description": "Complete API collection for enhanced ToDoList with collaborators, soft delete, timestamps, and JSON-based operations.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "adminAuth",
      "value": "Basic YWRtaW46YWRtaW4xMjM=",
      "type": "string"
    },
    {
      "key": "user1Auth",
      "value": "Basic dXNlcjE6cGFzc3dvcmQxMjM=",
      "type": "string"
    },
    {
      "key": "user2Auth",
      "value": "Basic dXNlcjI6cGFzc3dvcmQ0NTY=",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Setup Users",
      "item": [
        {
          "name": "Create User1",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{adminAuth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user1\",\n  \"email\": \"user1@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Create User2",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{adminAuth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user2\",\n  \"email\": \"user2@example.com\",\n  \"password\": \"password456\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "2. Enhanced Task Operations",
      "item": [
        {
          "name": "Create Enhanced Task (User1)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Enhanced Project Task\",\n  \"description\": \"Task with all enhanced features\",\n  \"dueDate\": \"2025-09-15\",\n  \"status\": \"PENDING\",\n  \"category\": \"Work\",\n  \"priority\": \"HIGH\"\n}"
            }
          }
        },
        {
          "name": "Get Task using JSON Body",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/get",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "get"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1\n}"
            }
          }
        },
        {
          "name": "Update Task using JSON Body",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/update",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "update"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"title\": \"Updated Enhanced Task\",\n  \"description\": \"Task updated with new description\",\n  \"status\": \"IN_PROGRESS\",\n  \"priority\": \"MEDIUM\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "3. Collaboration Features",
      "item": [
        {
          "name": "Add User2 as Collaborator to Task1",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/collaborator/add",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "collaborator", "add"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"taskId\": 1,\n  \"collaboratorUsername\": \"user2\"\n}"
            }
          }
        },
        {
          "name": "User2 Views Collaborative Task",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{user2Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            }
          }
        },
        {
          "name": "User2 Updates Collaborative Task",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user2Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/update",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "update"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"description\": \"Updated by collaborator User2\",\n  \"status\": \"COMPLETED\"\n}"
            }
          }
        },
        {
          "name": "Remove User2 as Collaborator",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/collaborator/remove",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "collaborator", "remove"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"taskId\": 1,\n  \"collaboratorUsername\": \"user2\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "4. Filter Operations",
      "item": [
        {
          "name": "Filter Tasks by Status",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/filter/status",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "filter", "status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"COMPLETED\"\n}"
            }
          }
        },
        {
          "name": "Filter Tasks by Category",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/filter/category",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "filter", "category"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"category\": \"Work\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "5. Soft Delete Testing",
      "item": [
        {
          "name": "Create Task for Deletion Test",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Task to be deleted\",\n  \"description\": \"This task will be soft deleted\",\n  \"dueDate\": \"2025-12-31\",\n  \"status\": \"PENDING\",\n  \"category\": \"Test\",\n  \"priority\": \"LOW\"\n}"
            }
          }
        },
        {
          "name": "Soft Delete Task using JSON",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/delete",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "delete"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 2\n}"
            }
          }
        },
        {
          "name": "Verify Task is Not Listed (Soft Deleted)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            }
          }
        }
      ]
    },
    {
      "name": "6. Legacy Compatibility",
      "item": [
        {
          "name": "Get Task by Path (Legacy)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/1",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "1"]
            }
          }
        },
        {
          "name": "Update Task by Path (Legacy)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "{{user1Auth}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/1",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "1"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Legacy Updated Task\",\n  \"description\": \"Updated via legacy endpoint\"\n}"
            }
          }
        }
      ]
    }
  ]
}

{
  "info": {
    "name": "New Todo Application",
    "description": "API collection for testing ToDoList application without caching - managing users and tasks.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "adminAuth",
      "value": "Basic YWRtaW46YWRtaW4xMjM=",
      "type": "string",
      "description": "Base64 encoded admin:admin123"
    },
    {
      "key": "user1Auth",
      "value": "Basic dXNlcjE6cGFzc3dvcmQxMjM=",
      "type": "string",
      "description": "Base64 encoded user1:password123"
    },
    {
      "key": "user2Auth",
      "value": "Basic dXNlcjI6cGFzc3dvcmQ0NTY=",
      "type": "string",
      "description": "Base64 encoded user2:password456"
    }
  ],
